# finco_telegram_bot/.env.example
# Rename this file to .env and fill in your actual values.

NODE_ENV=development
APP_PORT=3001 # Bot uchun alohida port

TELEGRAM_BOT_TOKEN=SIZNING_BOT_TOKENINGIZ
TELEGRAM_BOT_NAME=FincoKpiBot
TELEGRAM_ADMIN_TELEGRAM_ID=SIZNING_ADMIN_ID_RAQAMINGIZ

DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=finco_kpi_bot_db # Bot uchun alohida baza yoki umumiy baza

# REDIS (BullQueue uchun)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# STT Service URL (agar STT alohida mikroservis bo'lsa)
STT_SERVICE_URL=http://localhost:5001 # STT servisining manzili

# OLLAMA URL (agar lokal LLM ishlatilsa)
OLLAMA_BASE_URL=http://localhost:11434

# JWT_SECRET (agar bot o'zi API taqdim etsa yoki boshqa servisga murojaat qilsa)
# JWT_SECRET=your_very_strong_jwt_secret
